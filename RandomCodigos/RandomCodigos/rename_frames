import os

def rename_files(folder_path, extension):
    # Get a list of all files in the folder with the given extension
    files = [f for f in os.listdir(folder_path) if f.endswith(extension)]

    # Rename each file
    for file_name in files:
        # Split the file name into base and extension
        base_name, ext = os.path.splitext(file_name)
        
        # Construct the new file name
        new_file_name = f"{base_name}(1){ext}"
        
        # Construct the paths for the old and new file names
        old_path = os.path.join(folder_path, file_name)
        new_path = os.path.join(folder_path, new_file_name)
        
        # Rename the file
        os.rename(old_path, new_path)
        
        print(f"Renamed '{file_name}' to '{new_file_name}'")

# Specify the folder paths
image_folder = "/home/santilm/Desktop/valid/images"
text_folder = "/home/santilm/Desktop/valid/labels"

# Rename image files
rename_files(image_folder, ".jpg")

# Rename text files
rename_files(text_folder, ".txt")
